{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./build",
    "noEmit": false,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": "./src/",
    "paths": {
      "src/*": ["./*"],
      "middleware/*": ["./middleware/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types/global/"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "src/**/*.test.ts"]
}
